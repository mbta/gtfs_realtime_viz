<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>GTFS Realtime Visualization</title>
  <meta name="description" content="Visualize GTFS Realtime protobuf files">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <style>
    table {
      text-align: left;
      border-collapse: collapse;
    }
    td, th {
      border-bottom: 1px solid #ddd;
      margin: 0;
      padding: 0 1em;
    }
  </style>
</head>
<body>
  <h1>Visualization</h1>

  <h2>Routes</h2>

  <%= for {route_name, stops} <- @routes do %>
    <h3><%= route_name %></h3>
    <table>
      <tr>
        <th>Transit
        <th>Incoming</th>
        <th>At</th>
        <th>Station</th>
        <th>At</th>
        <th>Incoming</th>
        <th>Transit</th>
      </tr>

      <%= for [stop_name, stop_id_0, stop_id_1] <- stops do %>
        <% veh0 = @vehicles[stop_id_0] %>
        <% veh1 = @vehicles[stop_id_1] %>

        <tr>
          <th><%= if veh0 && veh0.current_status == :IN_TRANSIT_TO, do: ">" %></th>
          <th><%= if veh0 && veh0.current_status == :INCOMING_AT, do: ">" %></th>
          <th><%= if veh0 && veh0.current_status == :STOPPED_AT, do: ">" %></th>
          <th><%= stop_name %></th>
          <th><%= if veh1 && veh1.current_status == :STOPPED_AT, do: "<" %></th>
          <th><%= if veh1 && veh1.current_status == :INCOMING_AT, do: "<" %></th>
          <th><%= if veh1 && veh1.current_status == :IN_TRANSIT_TO, do: "<" %></th>
        </tr>
      <% end %>
    </table>
  <% end %>

  <h2>All Vehicle Location Data</h2>
  <div>
    <table>
      <thead>
        <tr>
          <th>Route ID</th>
          <th>Trip ID</th>
          <th>Sched. Relationship</th>
          <th>Stop ID</th>
          <th>Status</th>
          <th>Stop Seq.</th>
          <th>Position</th>
          <th>Veh. ID</th>
          <th>Veh. Label</th>
        </tr>
      </thead>
      <tbody>
        <%= for {_id, vehicle} <- @vehicles do %>
          <tr>
            <%= if (trip = vehicle.trip) do %>
              <td><%= trip.route_id %></td>
              <td><%= trip.trip_id %></td>
              <td><%= trip.schedule_relationship %></td>
            <% else %>
              <td>n/a</td>
              <td>n/a</td>
              <td>n/a</td>
            <% end %>
            <td><%= vehicle.stop_id %></td>
            <td><%= vehicle.current_status %></td>
            <td><%= vehicle.current_stop_sequence %></td>
            <%= if (pos = vehicle.position) do %>
              <td><%= "(#{Float.round(pos.latitude, 5)}, #{Float.round(pos.longitude, 5)})" %></td>
            <% else %>
              <td>n/a</td>
            <% end %>
            <%= if (veh = vehicle.vehicle) do %>
              <td><%= veh.id %></td>
              <td><%= veh.label %></td>
            <% else %>
              <td>n/a</td>
              <td>n/a</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</body>
</html>
